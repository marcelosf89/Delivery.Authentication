@model Delivery.Authentication.Api.Models.LoginViewModel

<link href="~/css/floating-labels.css" rel="stylesheet">
<link href="~/css/login.css" rel="stylesheet">
<link href="~/css/ap-aminate.css" rel="stylesheet">

<form class="form-signin" asp-route="Login" style="z-index:10">
    <input type="hidden" asp-for="ReturnUrl" />
    <fieldset>
        <div class="text-center mb-4">
            <img class="" src="~/images/bridge.svg" alt="" width="80" height="80">
        </div>
        <div class="text-center">
            <h1 class="h3 mb-3 font-weight-normal">Login</h1>
        </div>
        @await Html.PartialAsync("_ValidationSummary")
        <div class="form-label-group">
            <input type="text" id="inputEmail" class="form-control" asp-for="Username" placeholder="Username" required="" autofocus="">
            <label for="inputEmail">Username</label>
        </div>

        <div class="form-label-group">
            <input type="password" id="inputPassword" class="form-control" asp-for="Password" placeholder="Password" required="" autocomplete="off">
            <label for="inputPassword">Password</label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </fieldset>    
</form>
